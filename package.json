{
  "name": "fragments",
  "private": true,
  "version": "0.7.2",
  "description": "Fragments back-end API for Winter 2022",
  "engines": {
    "node": ">=16"
  },
  "scripts": {
    "test:watch": "jest -c jest.config.js --runInBand --watch --",
    "test": "jest -c jest.config.js --runInBand --",
    "coverage": "jest -c jest.config.js --runInBand --coverage",
    "lint": "eslint --config .eslintrc.js src/** tests/**/*.js ",
    "start": "node src/index.js",
    "dev": "LOG_LEVEL=debug nodemon ./src/index.js --watch src",
    "debug": "LOG_LEVEL=debug nodemon --inspect=0.0.0.0:9229 ./src/index.js --watch src",
    "curl": "LOG_LEVEL=debug HTPASSWD_FILE=tests/.htpasswd nodemon --inspect=0.0.0.0:9229 ./src/index.js --watch src"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/xfstc/fragments.git"
  },
  "author": "Lingxiang Fan",
  "license": "UNLICENSED",
  "devDependencies": {
    "eslint": "^8.7.0",
    "jest": "^27.5.1",
    "nodemon": "^2.0.15",
    "prettier": "2.5.1",
    "supertest": "^6.2.2"
  },
  "dependencies": {
    "aws-jwt-verify": "^2.1.0",
    "body-parse": "^0.1.0",
    "compression": "^1.7.4",
    "content-type": "^1.0.4",
    "cors": "^2.8.5",
    "crypto": "^1.0.1",
    "crypto-js": "^4.1.1",
    "dotenv": "^14.2.0",
    "express": "^4.17.2",
    "helmet": "^5.0.1",
    "http-auth": "^4.1.9",
    "http-auth-passport": "^1.0.6",
    "markdown-it": "^12.3.2",
    "nanoid": "^3.2.0",
    "passport": "^0.5.2",
    "passport-http-bearer": "^1.0.1",
    "pino": "^7.6.3",
    "pino-http": "^6.5.0",
    "pino-pretty": "^7.3.0",
    "stoppable": "^1.1.0"
  }
}
